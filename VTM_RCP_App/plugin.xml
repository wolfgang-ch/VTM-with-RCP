<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<extension
		id="application"
		point="org.eclipse.core.runtime.applications">
		<application>
			<run
				class="vtm.rcp.app.Application">
			</run>
		</application>
	</extension>


	<extension	point="org.eclipse.ui.perspectives">
		<perspective
			name	="Perspective"
			class	="vtm.rcp.app.Perspective"
			id=		"VTM_RCP_App.perspective">
		</perspective>
	</extension>


	<extension	point="org.eclipse.ui.views">
		<view
			name	="View"
			class	="vtm.rcp.app.View"
			id		="VTM_RCP_App.view"
		/>
	</extension>


	<extension	point="org.eclipse.ui.perspectiveExtensions">
		<perspectiveExtension
			targetID="*">
	 		<view
				id				="VTM_RCP_App.view"
				relationship	="left"
				relative			="org.eclipse.ui.editorss"
			/>
		</perspectiveExtension>
	</extension>


	<extension	point="org.eclipse.ui.menus">
		<menuContribution	locationURI="menu:org.eclipse.ui.main.menu">
			<menu	label="File">
				<command
					commandId	="VTM_RCP_App.command.openMapView"
					label		="Open VTM View"
				/>

				<command
					commandId	="org.eclipse.ui.file.exit"
					label		="Exit"
				/>
			</menu>
		</menuContribution>
	</extension>


	<extension	point="org.eclipse.ui.commands">
		<command
			id="VTM_RCP_App.command.openMapView"
			name="OpenMapView"
		/>
	</extension>


	<extension	point="org.eclipse.ui.handlers">
		<handler
			commandId="VTM_RCP_App.command.openMapView"
			class="vtm.rcp.app.ViewHandler"
		/>
	</extension>

</plugin>
